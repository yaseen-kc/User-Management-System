<% include('../layouts/header.ejs') %>

  <style>
    body {
      background-color: #121212;
      /* Light gray background color */
    }

    .login-container {
      max-width: 400px;
      margin: auto;
      margin-top: 100px;
      padding: 20px;
      background-color: #ffffff;
      /* White background color */
      border: 1px solid #ced4da;
      /* Bootstrap's default border color */
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      /* Light box shadow */
    }

    .login-container h1 {
      text-align: center;
      color: #007bff;
      /* Bootstrap's primary color */
    }

    .login-container form {
      margin-top: 20px;
    }

    .login-container form label {
      font-weight: bold;
    }

    .login-container form input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ced4da;
      /* Bootstrap's default border color */
      border-radius: 3px;
    }

    .login-container form button {
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      /* Bootstrap's primary color */
      color: #fff;
      /* White text color */
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }

    .login-container form button:hover {
      background-color: #0056b3;
      /* Darker shade on hover */
    }

    .login-container a {
      display: block;
      margin-top: 20px;
      text-align: center;
      text-decoration: none;
      color: #007bff;
      /* Bootstrap's primary color */
    }

    .login-container a:hover {
      text-decoration: underline;
    }

    .error-message {
      background-color: #f8d7da;
      /* Bootstrap's danger background color */
      color: #721c24;
      /* Bootstrap's danger text color */
      padding: 10px;
      border-radius: 5px;
      margin-bottom: 15px;
    }
  </style>

  <div class="container login-container">
    <h1>Login</h1>

    <% if (typeof message !=='undefined' ) { %>
      <div class="error-message">
        <!-- Display error message here -->
        <h4>
          <%= message %>
        </h4>
      </div>
      <% } %>

        <form action="/login" method="post">
          <div class="mb-3">
            <label for="email" class="form-label">Enter Email</label>
            <input type="email" class="form-control" id="email" name="email" aria-label="Email" required>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Enter Password</label>
            <input type="password" class="form-control" id="password" name="password" aria-label="Password" required>
          </div>

          <button type="submit" class="btn btn-primary">Login</button>
        </form>

        <a href="/register">Sign Up</a>
        <a href="/admin/login">Admin</a>
  </div>

  <% include('../layouts/footer.ejs') %>