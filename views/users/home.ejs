<% include('../layouts/header.ejs') %>

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      /* Updated font */
      background-color: #121212;
      /* Light gray background color */
      padding: 20px;
      /* Added padding for consistent spacing */
    }

    .user-info {
      max-width: 600px;
      margin: auto;
      background-color: #ffffff;
      /* White background color */
      border: 1px solid #ced4da;
      /* Bootstrap's default border color */
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      /* Light box shadow */
      padding: 40px;
      /* Increased padding for better spacing */
    }

    .user-info h3 {
      text-align: center;
      color: #007bff;
      /* Bootstrap's primary color */
      margin-bottom: 20px;
      /* Added bottom margin for spacing */
    }

    .user-info table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
      /* Added bottom margin for spacing */
    }

    .user-info table td {
      padding: 10px;
    }

    .edit-link,
    .logout-link {
      display: inline-block;
      /* Changed to inline-block for better alignment */
      padding: 10px 20px;
      /* Added padding for better click area */
      text-decoration: none;
      color: #007bff;
      /* Bootstrap's primary color */
      border-radius: 5px;
      transition: background-color 0.3s, color 0.3s;
      /* Smooth transitions */
    }

    .edit-link:hover,
    .logout-link:hover {
      background-color: #007bff;
      /* Changed background color on hover */
      color: #fff;
      /* Changed text color on hover */
    }
  </style>

  <div class="container user-info">
    <h3>Welcome, <%= user.name %>
    </h3>

    <table>
      <tr>
        <td>Email:</td>
        <td>
          <%= user.email %>
        </td>
      </tr>
      <tr>
        <td>Mobile:</td>
        <td>
          <%= user.mobile %>
        </td>
      </tr>
    </table>

    <a class="edit-link" href="/edit?id=<%= user._id %>">Edit Profile</a>

    <a class="logout-link" href="/logout">Logout</a>
  </div>

  <% include('../layouts/footer.ejs') %>