<% include('../layouts/header.ejs') %>

<style>
  body {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    /* Updated font */
    background-color: #121212;
    /* Light gray background color */
  }

  .edit-user-container {
    max-width: 400px;
    margin: auto;
    margin-top: 50px;
    padding: 20px;
    background-color: #ffffff;
    /* White background color */
    border: 1px solid #ced4da;
    /* Bootstrap's default border color */
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    /* Light box shadow */
  }

  .edit-user-container h1 {
    text-align: center;
    color: #007bff;
    /* Bootstrap's primary color */
    font-weight: bold;
    /* Added font weight */
    margin-bottom: 20px;
    /* Increased bottom margin */
  }

  .edit-user-container form {
    margin-top: 20px;
  }

  .edit-user-container form input {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ced4da;
    /* Bootstrap's default border color */
    border-radius: 3px;
  }

  .edit-user-container form button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    /* Bootstrap's primary color */
    color: #fff;
    /* White text color */
    border: none;
    border-radius: 3px;
    cursor: pointer;
    font-weight: bold;
    /* Added font weight */
    transition: background-color 0.3s;
    /* Smooth color transition */
  }

  .edit-user-container form button:hover {
    background-color: #0056b3;
    /* Darker shade on hover */
  }

  .edit-user-container a {
    display: block;
    margin-top: 20px;
    text-align: center;
    text-decoration: none;
    color: #007bff;
    /* Bootstrap's primary color */
    font-weight: bold;
    /* Added font weight */
    transition: color 0.3s;
    /* Smooth color transition */
  }

  .edit-user-container a:hover {
    text-decoration: underline;
    color: #0056b3;
    /* Darker shade on hover */
  }
</style>

<div class="container edit-user-container">
  <h1>Edit User</h1>

  <form action="" method="post">
    <input type="hidden" name="user_id" value="<%=user._id%>" />

    <div class="mb-3">
      <label for="name" class="form-label">Enter Name</label>
      <input
        type="text"
        class="form-control"
        name="name"
        pattern="[A-Za-z]+"
        placeholder="Enter Name"
        value="<%= user.name %>"
        onkeydown="return /[a-zA-Z _]/.test(event.key) || event.keyCode === 8"
        required
      />
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Enter Email</label>
      <input
        type="email"
        class="form-control"
        name="email"
        placeholder="Enter Email"
        value="<%= user.email %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="mno" class="form-label">Enter Mobile</label>
      <input
        type="text"
        class="form-control"
        name="mno"
        placeholder="Enter Mobile"
        value="<%= user.mobile %>"
        onkeydown="return /[0-9]/.test(event.key) || event.keyCode === 8"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Update User</button>
  </form>

  <a href="/admin/">Go to Dashboard</a>
</div>

<% include('../layouts/footer.ejs') %>
