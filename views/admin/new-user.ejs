<% include('../layouts/headers.ejs') %>

    <div class="container new-user-container">
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f0f2f5;
            }

            .new-user-container {
                background-color: #fff;
                border-radius: 8px;
                padding: 40px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                max-width: 400px;
                margin: 0 auto;
                margin-top: 50px;
            }

            h1 {
                font-size: 24px;
                margin-bottom: 20px;
                color: #333;
                text-align: center;
            }

            form {
                display: flex;
                flex-direction: column;
            }

            .mb-3 {
                margin-bottom: 20px;
            }

            .form-label {
                font-weight: bold;
                margin-bottom: 5px;
                color: #333;
            }

            .form-control {
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
                width: 100%;
            }

            .btn-primary {
                background-color: #1877f2;
                color: #fff;
                padding: 12px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
                transition: background-color 0.3s;
                width: 100%;
            }

            .btn-primary:hover {
                background-color: #0e5a8a;
            }

            #errorMessage {
                color: green;
                text-align: center;
                margin-bottom: 20px;
            }

            a {
                color: #1877f2;
                text-decoration: none;
                font-size: 16px;
                text-align: center;
                display: block;
                margin-top: 20px;
            }

            a:hover {
                color: #0e5a8a;
            }
        </style>

        <h1>Add New User</h1>

        <form action="" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Enter Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Enter Email</label>
                <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
            </div>

            <div class="mb-3">
                <label for="mno" class="form-label">Enter Mobile</label>
                <input type="text" class="form-control" name="mno" placeholder="Enter Mobile" required>
            </div>

            <div class="mb-3">
                <label for="mno" class="form-label">Upload Image</label>
                <input type="file" class="form-control" name="image" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Enter Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter Password" required>
            </div>

            <input type="submit" class="btn btn-primary" value="Add New">
        </form>

        <% if (typeof message !=='undefined' ) { %>
            <p style="color:green;" id="errorMessage">
                <%= message %>
            </p>
            <% } %>

                <a href="/admin/dashboard">Go Back</a>
    </div>

    <% include('../layouts/footer.ejs') %>