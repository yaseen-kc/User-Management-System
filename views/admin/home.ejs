<% include('../layouts/header.ejs') %>

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      /* Updated font */
      background-color: #f8f9fa;
      /* Light gray background color */
      margin: 0;
      /* Remove default body margin */
    }

    .admin-home-container {
      max-width: 600px;
      margin: auto;
      margin-top: 50px;
      padding: 20px;
      background-color: #ffffff;
      /* White background color */
      border: 1px solid #ced4da;
      /* Bootstrap's default border color */
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      /* Light box shadow */
    }

    .admin-home-container h1 {
      text-align: center;
      color: #007bff;
      /* Bootstrap's primary color */
      margin-bottom: 20px;
      /* Increased bottom margin for separation */
    }

    .admin-home-container table {
      width: 100%;
      margin-top: 20px;
      border-collapse: collapse;
    }

    .admin-home-container table,
    .admin-home-container table td {
      border: 1px solid #ced4da;
      /* Bootstrap's default border color */
      padding: 10px;
      /* Added padding */
    }

    .admin-home-container table td:first-child {
      font-weight: bold;
      /* Bold font for table header */
    }

    .admin-home-container a {
      display: block;
      margin-top: 20px;
      text-align: center;
      text-decoration: none;
      color: #007bff;
      /* Bootstrap's primary color */
      font-weight: bold;
      /* Bold font for links */
      transition: color 0.3s;
      /* Smooth color transition */
    }

    .admin-home-container a:hover {
      text-decoration: underline;
      color: #0056b3;
      /* Darker shade on hover */
    }
  </style>

  <div class="container admin-home-container">
    <h1>Welcome, <%= admin.name %>
    </h1>

    <table>
      <tr>
        <td>Email</td>
        <td>
          <%= admin.email %>
        </td>
      </tr>
      <tr>
        <td>Mobile</td>
        <td>
          <%= admin.mobile %>
        </td>
      </tr>
    </table>

    <a href="/admin/logout">Logout</a>
    <a href="/admin/dashboard">Dashboard</a>
  </div>

  <% include('../layouts/footer.ejs') %>